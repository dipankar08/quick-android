<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#aa000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:id="@+id/pin_setup_holder"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="23sp"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Setup your login pin"/>
        <TextView
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"
            android:maxLines="3"
            android:textColor="@android:color/white"
            android:text="You need to setup login pin to use aloha work VC"/>
        <EditText
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/pin_setup_input"
            android:background="@drawable/background_border_white"
            android:textColor="@android:color/white"
            android:inputType="numberPassword"
            android:hint="enter pin"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="15dp"
            android:layout_width="180dp"
            android:layout_height="30dp" />
        <EditText
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/pin_setup_reinput"
            android:hint="re-enter pin"
            android:inputType="numberPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/background_border_white"
            android:layout_marginBottom="30dp"
            android:layout_width="180dp"
            android:layout_height="30dp" />
        <Button
            android:id="@+id/pin_setup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Sumbit"/>
        <TextView
            android:id="@+id/pin_setup_error_text"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"
            android:maxLines="3"
            android:visibility="gone"
            android:textColor="@android:color/holo_red_dark" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pin_verify_holder"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="23sp"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Verify your pin"/>
        <TextView
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:maxLines="3"
            android:layout_marginBottom="15dp"
            android:textColor="@android:color/white"
            android:text="You need to verify your pin before open this app"/>
        <EditText
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/pin_verify_input"
            android:background="@drawable/background_border_white"
            android:textColor="@android:color/white"
            android:inputType="numberPassword"
            android:hint="enter pin"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="30dp"
            android:layout_width="180dp"
            android:layout_height="30dp" />
        <Button
            android:id="@+id/pin_verify_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"/>

        <TextView
            android:id="@+id/pin_verify_error_text"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"
            android:maxLines="3"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>