<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_width="60dp"
    android:gravity="center"
    android:layout_height="90dp">
    <in.co.dipankar.quickandorid.views.CircleImageView
        android:id="@+id/this_image"
        android:layout_width="40dp"
        android:background="@null"
        android:src="@drawable/ic_user_male"
        android:layout_gravity="center"
        app:civ_border_color="#15000000"
        app:civ_border_width="1dp"
        android:layout_marginBottom="4dp"
        android:layout_height="40dp" />
    <in.co.dipankar.quickandorid.views.CustomFontTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:text="Hello World"
        app:customfont="TitilliumWeb-Regular.ttf"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="10sp"
        android:maxLines="1"
        android:layout_height="wrap_content" />
</LinearLayout>