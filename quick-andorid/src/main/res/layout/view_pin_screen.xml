<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/pin_dot_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/dotImage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/circle_empty"
            />
        <ImageView
            android:id="@+id/dotImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/circle_empty"
            />
        <ImageView
            android:id="@+id/dotImage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/circle_empty"
            />
        <ImageView
            android:id="@+id/dotImage4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/circle_empty"
            />
    </LinearLayout>
    <TableLayout
        android:id="@+id/keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="beginning|middle|end">
        <TableRow>
            <Button
                android:id="@+id/key_1"
                style="@style/keyboard_number_button"
                android:text="@string/key_1"/>
            <Button
                android:id="@+id/key_2"
                style="@style/keyboard_number_button"
                android:text="@string/key_2"/>
            <Button
                android:id="@+id/key_3"
                style="@style/keyboard_number_button"
                android:text="@string/key_3"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/key_4"
                style="@style/keyboard_number_button"
                android:text="@string/key_4"/>
            <Button
                android:id="@+id/key_5"
                style="@style/keyboard_number_button"
                android:text="@string/key_5"/>
            <Button
                android:id="@+id/key_6"
                style="@style/keyboard_number_button"
                android:text="@string/key_6"/>
        </TableRow>
        <TableRow>
        <Button
            android:id="@+id/key_7"
            style="@style/keyboard_number_button"
            android:text="@string/key_7"/>
        <Button
            android:id="@+id/key_8"
            style="@style/keyboard_number_button"
            android:text="@string/key_8"/>
        <Button
            android:id="@+id/key_9"
            style="@style/keyboard_number_button"
            android:text="@string/key_9"/>
        </TableRow>
        <TableRow>
            <ImageButton
                android:id="@+id/clear"
                android:src="@drawable/ic_pin_clear"
                style="@style/keyboard_number_button"
                />
            <Button
                android:id="@+id/key_0"
                style="@style/keyboard_number_button"
                android:text="@string/key_0"/>
            <ImageButton
                android:id="@+id/back"
                style="@style/keyboard_number_button"
                android:src="@drawable/ic_pin_back" />
        </TableRow>
    </TableLayout>

</LinearLayout>